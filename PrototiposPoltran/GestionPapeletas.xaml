                <Label x:Name="labe43" Content="Fecha:" Margin="198,89,181,81" Foreground="White" RenderTransformOrigin="0.522,-0.708" FontSize="16"/>
                <DatePicker x:Name="dpFecEnv" Margin="273,89,9,70" FontSize="16" FontWeight="Normal"/>
                <Label x:Name="lblEstadoEnvio" Content="ESTADO" Margin="148,152,146,10" Foreground="Aqua" RenderTransformOrigin="0,0" FontSize="20"   />

            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
