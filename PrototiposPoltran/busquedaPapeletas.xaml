<UserControl x:Class="PrototiposPoltran.busquedaPapeletas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrototiposPoltran"
             mc:Ignorable="d" 
             Background="#2E2E2E" Width="1006.5" Height="636.5">
    <Grid>
        <Grid>
            <Border BorderBrush="White" BorderThickness="4" Margin="0,10,0,506">
                <Grid Margin="0,0,0,6">
                    <GroupBox x:Name="buscarpor" Header="Buscar Por" HorizontalAlignment="Left" Margin="25,0,0,4" Width="303" FontWeight="Bold" Cursor="" Foreground="White">
                        <Grid HorizontalAlignment="Left" Height="72" Margin="10,6,-2,0" VerticalAlignment="Top" Width="288">
                            <Label x:Name="label3" Content="Papeleta:" Margin="20,3,200,37" Foreground="White" RenderTransformOrigin="0.522,-0.708"/>
                            <Label x:Name="label11" Content="Placa: " Margin="20,40,200,8" Foreground="White" RenderTransformOrigin="0.522,-0.708"/>
                            <TextBox x:Name="txtPapeleta" HorizontalAlignment="Left" Margin="100,3,0,46" TextWrapping="Wrap" Width="147"/>
                            <TextBox x:Name="txtPlaca" Margin="100,40,99,9" TextWrapping="Wrap"/>
                        </Grid>
                    </GroupBox>
                    <Button x:Name="btnBuscar" Margin="420,15,516,25" Background="Transparent" Click="btnBuscar_Click">
                        <Image Source="minibusquedaLogo.png"/>
                    </Button>
                    <Button x:Name="button1" HorizontalAlignment="Left" Margin="763,528,0,0" VerticalAlignment="Top" Width="74">
                        <Image Source="imprimirLogo.png"></Image>
                    </Button>
                    <Button x:Name="button2" HorizontalAlignment="Left" Margin="889,528,0,0" VerticalAlignment="Top" Width="76">
                        <Image Source="salirLogo.png"></Image>
                    </Button>
                    <Button x:Name="button3"  HorizontalAlignment="Left" Margin="736,10,0,0" VerticalAlignment="Top" Width="75" Height="72" Background="Transparent">
                        <Image Source="imprimirLogo.png"></Image>
                    </Button>
                    <Button x:Name="btnSalir"  HorizontalAlignment="Left" Margin="900,10,0,0" VerticalAlignment="Top" Width="75" Height="72" Background="Transparent" Click="btnSalir_Click">
                        <Image Source="salirLogo.png"></Image>
                    </Button>
                    <Label x:Name="label1" Content="IMPRIMIR" HorizontalAlignment="Left" Margin="739,82,0,0" FontWeight="Bold" Foreground="White"/>
                    <Label x:Name="label2" Content="SALIR" HorizontalAlignment="Left" Margin="916,82,0,0" FontWeight="Bold" Foreground="White"/>
                    <Label x:Name="label1_Copy" Content="BUSCAR" HorizontalAlignment="Left" Margin="422,82,0,0" FontWeight="Bold" Foreground="White"/>
                </Grid>
            </Border>
            <ContentControl Content="ContentControl" Margin="0,130,0,0" VerticalAlignment="Top" Height="506"/>
        </Grid>

    </Grid>
</UserControl>
