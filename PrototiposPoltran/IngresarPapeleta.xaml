             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PrototiposPoltran"
             mc:Ignorable="d" 
            Background="#2E2E2E" Width="1006.5" Height="580">
    <Grid>
        <Border BorderBrush="White" BorderThickness="4" Margin="10,10,10,490">
            <Grid HorizontalAlignment="Left" Width="1006" Margin="0,0,-28,-4">
                <Label x:Name="label3" Content="Papeleta Nro:" Margin="25,20,886,30" Foreground="White" RenderTransformOrigin="0.522,-0.708" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="txtNroPapeleta" HorizontalAlignment="Left" Margin="125,20,0,30" TextWrapping="Wrap" Width="147" FontSize="14"/>
                <Label x:Name="label2" Content="Placa Nro:" Margin="345,20,580,30" Foreground="White" RenderTransformOrigin="0.522,-0.708" FontSize="14" FontWeight="Bold"/>
                <TextBox x:Name="txtNroPlaca" HorizontalAlignment="Left" Margin="453,21,0,30" TextWrapping="Wrap" Width="147" FontSize="14" CharacterCasing="Upper"/>
                <Label x:Name="label1" Content="Fecha:" Margin="685,20,235,30" Foreground="White" RenderTransformOrigin="0.522,-0.708" FontSize="14" FontWeight="Bold"/>
                <DatePicker Margin="762,21,81,14" FontSize="14"/>
